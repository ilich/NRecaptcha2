@using System.Configuration
@using NRecaptcha2.Core
@using NRecaptcha2.WebControls
@using NRecaptcha2.WebPages

<!DOCTYPE html>
<html>
    <head>
        <title>NRecaptcha2 ASP.NET Web Pages (Razor) validation</title>
        @Html.NRecaptcha2Script()
    </head>
    <body>
        @{
            var siteKey = ConfigurationManager.AppSettings["SiteKey"];
            
            var errors = new List<string>();
            string firstName = "";
            string lastName = "";
        
            if (IsPost)
            {
                var secretKey = ConfigurationManager.AppSettings["SecretKey"];
                if (!Recaptcha2Validator.Validate(secretKey))
                {
                    errors.Add("Captcha is invalid");
                }
                
                firstName = Request["firstName"];
                if (string.IsNullOrWhiteSpace(firstName))
                {
                    errors.Add("First name is required");    
                }
                
                lastName = Request["lastName"]; 
                if (string.IsNullOrWhiteSpace(lastName))
                {
                    errors.Add("Last name is required");
                }
            }
            
            if (!IsPost || errors.Count > 0)
            {
                <ul>
                    @foreach(var error in errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            
                <form method="post">
                    @Html.Label("First Name: ")
                    @Html.TextBox("firstName", firstName)

                    <br />
                    <br />

                    @Html.Label("Last Name: ")
                    @Html.TextBox("lastName", lastName)

                    <br />
                    <br />

                    @Html.NRecaptcha2(siteKey, Theme.Light, CaptchaType.Image, 0)

                    <br />

                    <input type="submit" value="Submit" />
                </form>
            }
            else
            {
                <div>@firstName @lastName</div>
            }
        }
    </body>
</html>
